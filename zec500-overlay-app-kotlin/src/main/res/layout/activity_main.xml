<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:orientation="vertical"
        android:weightSum="2">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="173dp"
            android:layout_weight="1"
            android:text="THIS IS THE ZEC500 OVERLAY-SERVICE CONSUMER APP"
            android:textAllCaps="true"
            android:textSize="24sp" />


        <Button
            android:id="@+id/btOverlayServiceCaller"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:layout_weight="1"
            android:text="SHOW OVERLAY"
            android:onClick="onClickbtn_OVERLAYSERVICE"/>



        <Button
            android:id="@+id/btOverlayServiceHider"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:layout_weight="1"
            android:text="HIDE OVERLAY"
            android:onClick="onClickbtn_HIDEOVERLAY"/>


        <Button
            android:id="@+id/btInvokeCustomURISchema"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:layout_weight="1"
            android:text="USE CUSTOM SCHEMA"
            android:onClick="onClickbtn_ZECSCHEMA"/>

        <Button
            android:id="@+id/btInvokeCustomURISchemaToSetCaption"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:layout_weight="1"
            android:text="SET A CAPTION"
            android:onClick="onClickbtn_ZECSETCAPTION"/>

    </LinearLayout>
</ScrollView>